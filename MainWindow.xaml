<Window x:Class="_184863Spirals.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_184863Spirals"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="txtInput" Text="Type your input here in a comma sepperated list"/>
        <Label x:Name="lblOutput" Content="Your output will print here" HorizontalContentAlignment="Right" FontFamily="Consolas" FontSize="6" ScrollBar.Scroll="LblOutput_Scroll"/>
        <Button x:Name="btnCreate" Content="Click me to create your spiral" Click="BtnCreate_Click"/>
    </StackPanel>
</Window>
